{
  "name": "@corecast/ui",
  "version": "0.1.0",
  "description": "Core Cast SDR component library",
  "type": "module",

  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",

  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },

  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --clean --watch",
    "lint": "echo \"Linting @corecast/ui...\""
  },
  "dependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "react": "^19.2.0",
    "tsup": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
