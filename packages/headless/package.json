{
  "name": "@corecast/headless",
  "version": "3.0.0",
  "description": "Headless hook for Core Cast",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --clean --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "corecast",
    "sdr",
    "headless",
    "react",
    "hook"
  ],
  "author": {
    "name": "Core Cast",
    "url": "https://corecastsdr.com"
  },
  "license": "PolyForm-Noncommercial-1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/corecastsdr/corecast-web.git",
    "directory": "packages/headless"
  },
  "homepage": "https://github.com/corecastsdr/corecast-web#readme",
  "bugs": {
    "url": "https://github.com/corecastsdr/corecast-web/issues"
  },
  "dependencies": {
    "react": "^18.0.0",
    "wasm-media-encoders": "^0.7.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "tsup": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
